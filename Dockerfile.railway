FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install essential system dependencies first
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install minimal browser dependencies
RUN apt-get update && apt-get install -y \
    fonts-liberation \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first to leverage Docker cache
COPY requirements.txt .

# Install Python dependencies with pip cache disabled to save memory
RUN pip install --no-cache-dir -r requirements.txt

# Install only the Chromium browser for Playwright (no other browsers)
ENV PLAYWRIGHT_BROWSERS_PATH=/app/pw-browsers
RUN playwright install chromium
RUN playwright install-deps chromium

# Create the environment file directly in the Dockerfile
RUN echo "USE_WEBHOOK=true" > .env && \
    echo "WEBHOOK_PATH=/telegram/webhook" >> .env && \
    echo "PORT=8443" >> .env && \
    echo "BROWSER_HEADLESS=true" >> .env && \
    echo "BROWSER_BROWSERLESS=true" >> .env && \
    echo "GPT_MODEL=gpt-4o" >> .env && \
    echo "DEEPSEEK_MODEL=deepseek-reasoner" >> .env && \
    echo "CLAUDE_MODEL=anthropic/claude-3-7-sonnet-20250219" >> .env && \
    echo "SEARCH_TIMEOUT=90" >> .env && \
    echo "MAX_RETRIES=3" >> .env && \
    echo "MESSAGE_CHUNK_SIZE=4000" >> .env && \
    echo "MAX_HISTORY_LENGTH=10" >> .env && \
    echo "RAILWAY_ENVIRONMENT=production" >> .env && \
    echo "DISABLE_GIF_CREATION=true" >> .env

# Copy the rest of the application
COPY . .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV DISPLAY=:99
ENV DISABLE_GIF_CREATION=true
ENV RAILWAY_ENVIRONMENT=production
ENV USE_WEBHOOK=true
ENV PORT=8080

# Explicitly expose ports
# Port 8080 for health checks and main application
EXPOSE 8080
# Port 8443 for Telegram webhook
EXPOSE 8443

# Create a simple health check script
RUN echo '#!/usr/bin/env python3' > /app/start.py && \
    echo 'import http.server, socketserver, threading, subprocess, time, sys, os' >> /app/start.py && \
    echo 'print("Starting health check server...")' >> /app/start.py && \
    echo 'class Handler(http.server.SimpleHTTPRequestHandler):' >> /app/start.py && \
    echo '    def do_GET(self):' >> /app/start.py && \
    echo '        print(f"Health check request received: {self.path}")' >> /app/start.py && \
    echo '        self.send_response(200)' >> /app/start.py && \
    echo '        self.send_header("Content-type", "text/plain")' >> /app/start.py && \
    echo '        self.end_headers()' >> /app/start.py && \
    echo '        self.wfile.write(b"OK")' >> /app/start.py && \
    echo '    def log_message(self, format, *args): pass' >> /app/start.py && \
    echo 'def run_server():' >> /app/start.py && \
    echo '    with socketserver.TCPServer(("", 8080), Handler) as httpd:' >> /app/start.py && \
    echo '        print("Health check server running on port 8080")' >> /app/start.py && \
    echo '        httpd.serve_forever()' >> /app/start.py && \
    echo 'server_thread = threading.Thread(target=run_server, daemon=True)' >> /app/start.py && \
    echo 'server_thread.start()' >> /app/start.py && \
    echo 'time.sleep(2)  # Give the server time to start' >> /app/start.py && \
    echo 'print("Starting main application...")' >> /app/start.py && \
    echo 'os.execvp("python", ["python", "main.py"])' >> /app/start.py && \
    chmod +x /app/start.py

# Run the startup script instead of directly running main.py
CMD ["python", "/app/start.py"] 